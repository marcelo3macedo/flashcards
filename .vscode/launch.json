{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Next.js: Debug Backend",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect",
                "./node_modules/next/dist/bin/next",
                "dev"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}